// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/database/database.sqlite"
}

model Capacitacao {
  id           String @id @default(uuid())
  nome         String
  descricao    String
  cargaHoraria Int
  linkImagem   String
}

model Servico {
  id         String @id @default(uuid())
  nome       String
  descricao  String
  linkImagem String
}

model Equipamento {
  id         String @id @default(uuid())
  nome       String
  descricao  String
  linkImagem String
}

model AdminUsers {
  id    String @id @default(uuid())
  nome  String
  cpf   String @unique
  senha String
}
